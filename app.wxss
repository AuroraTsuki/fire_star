/** app.wxss **/
page, view, text, image, navigator {
  box-sizing: border-box;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Noto Sans SC', 'Source Han Sans SC', 'PingFang SC', 'Microsoft YaHei', sans-serif;
  background-color: #f8f7f6;
  color: #181411;
  line-height: 1.5;
  --primary: #ee8c2b;
  --primary-light: rgba(238, 140, 43, 0.1);
  --success: #22eb33; /* Vibrant green from the image */
  --success-light: rgba(34, 235, 51, 0.1);
  --info: #3b82f6;
  --info-light: rgba(59, 130, 246, 0.1);
  --secondary: #2d9d78;
  --text-main: #181411;
  --text-soft: #897561;
  --text-light: #a69282;
  --bg-main: #f8f7f6;
  --bg-secondary: #f3f4f6;
  --border-light: #edeceb;
  --white: #ffffff;
  
  /* Spacing Tokens */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 100vh;
}

/* Common Utility Classes */
.flex { display: flex; }
.flex-1 { flex: 1; }
.flex-col { flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.shrink-0 { flex-shrink: 0; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.justify-between { justify-content: space-between; }
.justify-center { justify-content: center; }
.justify-end { justify-content: flex-end; }
.justify-start { justify-content: flex-start; }

.p-2.5 { padding: 20rpx; }
.p-4 { padding: var(--space-lg); }
.p-6 { padding: 48rpx; }
.px-3 { padding-left: 24rpx; padding-right: 24rpx; }
.px-4 { padding-left: var(--space-lg); padding-right: var(--space-lg); }
.px-6 { padding-left: 48rpx; padding-right: 48rpx; }
.py-2 { padding-top: var(--space-sm); padding-bottom: var(--space-sm); }
.py-4 { padding-top: var(--space-lg); padding-bottom: var(--space-lg); }
.pb-2 { padding-bottom: var(--space-sm); }
.pb-8 { padding-bottom: 64rpx; }
.pb-24 { padding-bottom: 192rpx; }
.pb-32 { padding-bottom: 256rpx; }
.pb-40 { padding-bottom: 320rpx; }
.pb-48 { padding-bottom: 384rpx; }

.mb-2 { margin-bottom: var(--space-sm); }
.mt-2 { margin-top: var(--space-sm); }
.mt-2.5 { margin-top: 20rpx; }
.mt-4 { margin-top: var(--space-lg); }
.mt-10 { margin-top: 80rpx; }
.mr-2 { margin-right: var(--space-sm); }
.mr-8 { margin-right: 64rpx; }
.ml-2 { margin-left: var(--space-sm); }
.ml-4 { margin-left: var(--space-lg); }

.gap-1.5 { gap: 12rpx; }
.gap-2.5 { gap: 20rpx; }

.size-4.5 { width: 36rpx; height: 36rpx; }
.size-10 { width: 80rpx; height: 80rpx; }
.w-10 { width: 80rpx; }

.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 24rpx; }
.rounded-2xl { border-radius: 32rpx; }
.rounded-full { border-radius: 9999rpx; }

.bg-white { background-color: var(--white); }
.bg-primary { background-color: var(--primary); }
.bg-bg-main { background-color: var(--bg-main); }
.shadow-sm { box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04); }
.shadow-lg { box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08); }
.border { border: 1rpx solid var(--border-light); }
.border-b { border-bottom: 1rpx solid var(--border-light); }

.font-chinese {
  font-family: -apple-system, BlinkMacSystemFont, 'Noto Sans SC', 'Source Han Sans SC', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.block { display: block; }

/* Typography Scale */
.text-xs { font-size: 22rpx; line-height: 1.4; }
.text-sm { font-size: 28rpx; line-height: 1.5; }
.text-base { font-size: 32rpx; line-height: 1.5; }
.text-lg { font-size: 36rpx; line-height: 1.4; }
.text-xl { font-size: 44rpx; line-height: 1.3; }

.font-medium { font-weight: 500; }
.font-bold { font-weight: 700; }
.text-primary { color: var(--primary); }
.text-red { color: #ff4d4f; }
.text-white { color: #ffffff; }
.text-soft { color: var(--text-soft); }
.text-light { color: var(--text-light); }

/* Interactive feedback */
.active-opacity:active {
  opacity: 0.7;
}

.active-scale:active {
  transform: scale(0.97);
}

/* Glassmorphism Utilities */
.glass-panel {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

.glass-light {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(32px);
  -webkit-backdrop-filter: blur(32px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

/* Global Icons Utilities */
.icon-base {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background-color: currentColor;
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-size: contain;
  mask-size: contain;
}

