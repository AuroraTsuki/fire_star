/* Custom Tab Bar - Glassmorphism Floating Design */

/* Container to position the floating bar */
.tab-bar-container {
  position: fixed;
  bottom: calc(30rpx + env(safe-area-inset-bottom));
  left: 30rpx;
  right: 30rpx;
  z-index: 9999;
}

/* The actual bar (Floating Island) */
.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 128rpx; /* Taller for the island look */
  background: rgba(255, 255, 255, 0.7); /* bg-white/70 */
  backdrop-filter: blur(24px); /* backdrop-blur-xl */
  -webkit-backdrop-filter: blur(24px);
  border-radius: 64rpx; /* Super rounded */
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.5); /* border-white/50 */
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* Individual Item */
.tab-bar-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100rpx; /* Fixed height for touch target */
  border-radius: 32rpx; /* Inner radius for active state */
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  color: #999999; /* Inactive color */
}

/* Active State */
.tab-bar-item.active {
  width: 140rpx; /* Expand slightly */
  height: 100rpx; /* Match height */
  background: linear-gradient(135deg, #FF9F7A 0%, #FF6B95 100%); /* Orange-Pink Gradient */
  color: #ffffff;
  transform: translateY(-4rpx) scale(1.05); /* Levitate & Zoom */
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 149, 0.3);
}

