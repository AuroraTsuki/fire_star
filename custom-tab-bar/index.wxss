/* Active State Styles */
.tab-item.selected .tab-text {
  color: #ffffff; /* White text for contrast */
  font-weight: 700;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.tab-item.selected .tab-icon {
  color: #ffffff;
  transform: scale(1.1); /* Scale up selected icon */
  transition: transform 0.2s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

/* Text */
.tab-text {
  font-size: 20rpx;
  font-weight: 500;
  line-height: 1;
}

.tab-bar-item.active .tab-text {
  font-weight: 700;
}
