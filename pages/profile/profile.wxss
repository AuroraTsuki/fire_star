.profile-header {
  padding: 60rpx 40rpx 40rpx;
  /* Glass Strong */
  background: rgba(255, 255, 255, 0.85); /* Slightly less transp for header */
  backdrop-filter: blur(32px);
  -webkit-backdrop-filter: blur(32px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
}

.avatar-border {
  padding: 8rpx;
  background-color: var(--primary-light);
  border-radius: 50%;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
}

.stats-container {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
  margin: 24rpx; /* Add margin to make it a distinct card */
  border-radius: 24rpx;
  /* Glass Panel */
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-main);
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-light);
  margin-top: 4rpx;
}

.tabs-section {
  position: sticky;
  top: 0;
  z-index: 10;
  /* Glass Light */
  background: rgba(255, 255, 255, 0.7); 
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
  padding: 0 40rpx;
}

.tabs-header {
  height: 100rpx;
}

.tab-item {
  position: relative;
  padding: 0 20rpx;
  height: 100%;
  display: flex;
  align-items: center;
  color: var(--text-light);
  font-size: 30rpx;
  transition: all 0.2s ease;
}

.tab-item.active {
  color: var(--text-main);
  font-weight: 700;
}

.tab-indicator {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: var(--primary);
  border-radius: 3rpx;
}

.works-grid {
  padding: var(--space-lg);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.work-item {
  width: 48.5%;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  /* Glass Panel */
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

.work-cover {
  width: 100%;
  height: 240rpx;
}

.work-title {
  padding: 16rpx;
  font-size: 26rpx;
  line-height: 1.4;
}

.empty-works {
  padding: 120rpx 40rpx;
  text-align: center;
}

.create-now-btn {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 80rpx;
  background-color: var(--primary);
  color: #ffffff;
  border-radius: 44rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(238, 140, 43, 0.2);
}
