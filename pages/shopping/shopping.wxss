.sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #f3f3f3;
}

.tabs-header {
  height: 90rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
}

.tab-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  color: #a69282;
}

.tab-item.active {
  color: var(--text-main);
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  border-radius: 3rpx;
}

.card-group {
  /* Glass Panel */
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  border-radius: 24rpx; /* Ensure rounded corners since it was default */
  overflow: hidden; /* For inner borders */
  margin-bottom: 24rpx; /* Add spacing if card group didn't have it */
}

.group-header {
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.group-icon-bg {
  width: 72rpx;
  height: 72rpx;
}

.source-tag {
  color: #a69282;
}

.shopping-item {
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.shopping-item:last-child {
  border-bottom: none;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 4rpx solid #edeceb;
  border-radius: 50%;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: linear-gradient(135deg, #22eb33, #18a324); /* Gradient Green */
  border-color: transparent; /* Hide border when filled */
  box-shadow: 0 4rpx 10rpx rgba(34, 235, 51, 0.3);
}

.item-name.line-through {
  text-decoration: line-through;
}

.manual-add {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border: 4rpx dashed rgba(237, 236, 235, 0.8);
  border-radius: 999rpx;
  height: 100rpx;
  margin: 20rpx 0;
}

.manual-add:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.98);
}

/* Bottom Bar Fixed Position */
.bottom-bar-float {
  position: fixed;
  bottom: calc(140rpx + env(safe-area-inset-bottom)); /* Lift above tab bar */
  left: 0;
  right: 0;
  z-index: 10;
  padding: 0 48rpx 20rpx; /* Increased side padding */
}

/* Button Base Transitions */
.clear-btn, .share-btn {
  height: 96rpx; /* Taller buttons (approx 48px) */
  transition: transform 0.1s, opacity 0.1s;
  border-radius: 48rpx; /* Fully rounded caps */
}

/* Clear Button: Small, Grey, Content Width */
.clear-btn {
  background-color: #f3f4f6; /* bg-secondary */
  color: #897561; /* text-soft */
  padding: 0 32rpx;
  flex: 0 0 auto; /* Don't grow, don't shrink */
  margin-right: 24rpx;
}

/* Share Button: Large, Green, Flexible Width */
.share-btn {
  background-color: #22eb33; /* success */
  color: #ffffff;
  flex: 1; /* Take up remaining space */
  box-shadow: 0 10rpx 30rpx rgba(34, 235, 51, 0.25);
}

/* Modal Styles */
.modal-root {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10001; /* Higher than custom tab bar (9999) */
  visibility: hidden;
  pointer-events: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-root.show {
  visibility: visible;
  pointer-events: auto;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4); /* Lighter mask for glass effect */
  backdrop-filter: blur(6px);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.modal-root.show .modal-mask {
  opacity: 1;
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  /* Glass Strong */
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(32px);
  -webkit-backdrop-filter: blur(32px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 40rpx;
  padding: 60rpx 50rpx;
  transform: scale(0.9) translateY(40rpx);
  opacity: 0;
  transition: all 0.4s cubic-bezier(0.18, 0.89, 0.32, 1.28);
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
}

.modal-root.show .modal-content {
  transform: scale(1) translateY(0);
  opacity: 1;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #a69282;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  height: 100rpx !important;
  background: #f8f7f6;
  border-radius: 24rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  color: #181411;
}

.modal-footer {
  margin-top: 20rpx;
  display: flex;
  gap: 30rpx;
}

.btn-base {
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  flex: 1;
}

.btn-cancel {
  background: #f3f4f6;
  color: #897561;
}

.btn-confirm {
  background: var(--success);
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(34, 235, 51, 0.2);
}

.btn-confirm:active {
  transform: scale(0.96);
  opacity: 0.9;
}

/* Red Background for Delete Mode Selection */
.bg-red {
    background-color: #ef4444; /* red-500 */
}
.border-red {
    border-color: #ef4444;
}

